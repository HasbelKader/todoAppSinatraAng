<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms">Add New Todo</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <form class="form-horizontal" method="post" action="/">
          <fieldset>
            <legend>New Todo</legend>
            <div class="form-group">
              <label for="title" class="col-lg-2 control-label">Title</label>
              <div class="col-lg-10">
                <input name="title" type="text" class="form-control" required placeholder="Title, Max 225 ch">
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Todo</label>
              <div class="col-lg-10">
                <textarea class="form-control" rows="3" name="content"></textarea>
                <span class="help-block">Description of the todo .</span>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <a href="/" class="btn btn-default">Cancel</a>
                <input type="submit" class="btn btn-primary" value="Submit">
              </div>
            </div>
          </fieldset>
        </form>

    </div>

  </div>
</div>



</div>