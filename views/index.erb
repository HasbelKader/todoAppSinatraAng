<div class="row">


  <div class="col-lg-5">
    <div class="page-header">


      <h1 id="tables" style="margin-left: 10px; padding: 5px">Todos </h1>
      <a href="/new" class="btn btn-primary">Add New Todo</a>

    </div>

    <div class="bs-component">
      <table class="table table-striped table-hover " id="todoTable">
        <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Content</th>
          <th>Created At</th>
          <th>Status</th>
        </tr>
        </thead>
        <tbody>


        <%= count = 1 %>
        <% @todos.each do |item| %>

            <tr id="<%=item.id%>" class="<%= item.done ? 'success' : 'warning' %>">


              <td><%= count %></td>
              <td><%= item.title %></td>
              <td><%= item.content %></td>
              <td><%= item.created_at.strftime("%b %e, %l:%M %p") %></td>
              <td><%= item.done ? "Completed" : "<span onclick='getOne(#{item.id});'>Click to see Details</span>" %></td>
              <%= count = count +1 %>

            </tr>
        <% end %>
        </tbody>
      </table>
      <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
    </div>
    <!-- /example -->
  </div>

  <div class="col-lg-5">
    <div class="page-header">


      <div class="panel panel-default">
        <div class="panel-body">
          All About The Selected Todo
        </div>
      </div>
      <span>Selected Todo Id : <span id="selectedTodo" class="label label-warning"> No todo selected!</span></span>


    </div>
    <div class="col-lg-5">

    <h2 id="selectedTitle">Select a todo </h2>
    <div>
      <p id="selecetedContent" class="panel-info"></p>
    </div>
    <div style="display: none" id="operations" class="panel-info">
    <div>
      <button style="padding: 10px" type="button" class="btn btn-primary bottom-left" value="Mark as Completed!" onclick="markAsCompleted(document.getElementById('selectedTodo').innerText);">
        Mark as Complete!
      </button>
      <button style="margin-top: 5px;" class="btn btn-danger" onclick="deleteOne(document.getElementById('selectedTodo').innerText)">Delete </button>
      <button style="margin-top: 5px;" class="btn btn-default" onclick="cancelOp();">Cancel </button></div>

    </div>

  </div>
  </div>

</div>









